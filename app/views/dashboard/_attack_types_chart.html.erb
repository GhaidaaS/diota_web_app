<canvas id="AttackTypeChart" width="100%" height="100%"></canvas>

<script>
     var ctx = document.getElementById('AttackTypeChart').getContext('2d');
  new Chart(ctx,
  {
    type:"polarArea",
    data:{
      labels:["DDos","Dos","Theft","Reconnaissance"],
      datasets:[{
        label:"My First Dataset",
        data:<%= [@total_ddos, @total_dos, @total_theft, @total_reconnaissance] %>,
        backgroundColor:[
          'rgb(153, 102, 255, 0.5)',
          'rgba(54, 162, 235, 0.5)',
          'rgb(75, 192, 192, 0.5)',
          'rgb(255, 205, 86, 0.5)'
          ]}]},
    options: {
      responsive: true,
      title: {
        display: true,
        text: 'Attack Type Chart'
      },
      tooltips: {
        mode: 'index',
      },
      hover: {
        mode: 'index'
      },
    }
      });
</script>
