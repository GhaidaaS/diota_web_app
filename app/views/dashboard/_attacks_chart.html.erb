<canvas id="AttackVsNormalChart" width="100%" height="100%"></canvas>

<script>
var ctx = document.getElementById('AttackVsNormalChart').getContext('2d');
  var options= {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        },
        title: {
            display: true,
            text: 'Normal Trffic Vs Attacks Traffic'
        }
    }
  var myBarChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: [''],
        datasets: [{
            label:  'Total Attacks',
            data: <%= [[@total_attacks]] %>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)'
            ],
            borderWidth: 1
        },
        {
            label:  'Total Normal Traffic',
            data: <%= [[@total_normal_traffic]] %>,
            backgroundColor: [
                'rgba(54, 162, 235, 0.2)'
            ],
            borderColor: [
              'rgba(54, 162, 235, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: options
	});
</script>
